<div class="flex row card card-background">
  <h2><%= affected_body_part.body_part.name %></h2>
  <div class="flex column">
    <% if affected_body_part.measuring_points.any? %>
      <%= link_to "Start a recording", new_affected_body_part_recording_path(affected_body_part), class:"btn" %>
    <% end %>
    <%= link_to "Add measuring points", affected_body_part_measuring_points_path(affected_body_part), class:"btn" %>
  </div>
  <div>
  <% if affected_body_part.recordings.any? %>
    <h4>Recordings </h4>
    <ul>
    <% affected_body_part.recordings.each do |recording| %>
      <li><%= link_to recording.recorded_at, [affected_body_part, recording] %></li>
    <% end %>
    </ul>
    <% end %>
  </div>
</div>
